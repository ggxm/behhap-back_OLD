<form action="/tag" method="POST">

	<div>
		<label for="name">Nom</label>
		<input type="text" name="name" required minlength="2" placeholder="Ex: JavaScript">
	</div>

	<div>
		<label for="category">Associer une catégorie&nbsp;:</label>
		<select name="category" id="category" required>
			<option value="">Choisir une catégorie</option>
			<% for(let category of data.categories) { %>
				<option value="<%- category._id %>"><%- category.name %></option>
			<% } %>
		</select>
	</div>

	<div>
		<p>------------</p>
		<input type="checkbox" id="isPublished" name="isPublished">
		<label for="isPublished">Activé</label>
		<p>------------</p>
	</div>

	<button type="submit">Ajouter</button>

</form>