<form action="/updateTag/<%- item._id %>" method="POST">

	<div>
		<label for="name">Nom</label>
		<input type="text" name="name" required minlength="2" placeholder="Ex: JavaScript" value="<%- item.name %>">
	</div>

	<div>
		<label for="category">Associer une catégorie&nbsp;:</label>
		<select name="category" id="category" required>
			<option value="">Choisir une catégorie</option>
			<% for(let category of item.categories) { %>
				<option value="<%- category._id %>" <% if (item.category._id.toString() === category._id.toString()) { %> selected <% } %>><%- category.name %></option>
			<% } %>
		</select>
	</div>

	<div>
		<p>------------</p>
		<input type="checkbox" id="isPublished" name="isPublished" <% if (item.isPublished === true) { %> checked <% } %>>
		<label for="isPublished">Activé</label>
		<p>------------</p>
	</div>

	<button type="submit">Ajouter</button>

</form>